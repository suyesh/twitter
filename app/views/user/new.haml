.container
	.row
		.span12
			%h1 Sign Up
			=form_for @user, :url => user_index_path do |f| 
				=f.label "First Name"
				=f.text_field :f_name
				=f.label "Last Name"
				=f.text_field :l_name
				=f.label "Email"
				=f.text_field :email
				=f.label "Username"
				=f.text_field :username
				=f.label "Password"
				=f.password_field :password
				=f.label "Password confirmation"
				=f.password_field :password_confirmation
				%br
				=f.submit :class=>"btn"